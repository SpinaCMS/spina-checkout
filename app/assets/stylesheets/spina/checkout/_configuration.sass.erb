// Fonts
$font-family: "Metropolis", sans-serif

// Colors
$green: #78a365
$red: #dc5959

$gray-darkest: #282828
$gray-darker: #393939
$gray-dark: #666
$gray: #999
$gray-light: #cdcdcd
$gray-lighter: #e7e7e7
$gray-lightest: #f6f6f6

// Keyword colors
$brand: <%= Spina::Checkout.config.brand_color %>
$brand-dark: <%= Spina::Checkout.config.brand_dark_color %>

$button: <%= Spina::Checkout.config.button_color %>
$button-hover: <%= Spina::Checkout.config.button_hover_color %>

// Responsive breakpoints
$mobile: "only screen and (max-width: 768px)"
$tablet: "only screen and (max-width: 1024px)"
